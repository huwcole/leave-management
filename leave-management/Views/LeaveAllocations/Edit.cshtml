@model leave_management.Models.EditLeaveAllocationVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.LeaveType.Name.ToLower() allocation for @Model.Employee.Firstname @Model.Employee.Lastname</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" /> <a asp-action="Details" asp-route-id="@Model.EmployeeId" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>